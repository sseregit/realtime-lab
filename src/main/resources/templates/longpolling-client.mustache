<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Long Polling Client</title>
    <style>
        body {
            font-family: sans-serif;
            font-size: 14px;
            padding: 1rem;
        }

        #log {
            border: 1px solid #ccc;
            height: 300px;
            overflow-y: auto;
            padding: 0.5rem;
            background: #f9f9f9;
        }

        .log-entry {
            margin-bottom: 0.25rem;
        }
    </style>
</head>
<body>
<h2>Long Polling Client</h2>
<button id="connectBtn">Connect</button>
<div id="log"></div>
<script>
    const userId = 'lp-' + Math.random().toString(36).substring(2, 8);
    const logEl = document.getElementById("log");
    const connectBtn = document.getElementById("connectBtn");

    function appendLog(msg) {
        const div = document.createElement("div");
        div.className = "log-entry";
        div.textContent = `[${new Date().toLocaleTimeString()}] ${msg}`;
        logEl.appendChild(div);
        logEl.scrollTop = logEl.scrollHeight;
    }

    function startPolling() {
        alert(Date.now().toString(36) + Math.random().toString(36))
        // fetch('/longpolling?userId=' + userId)
        //         .then(res => res.text())
        //         .then(message => {
        //             appendLog("📨 Message received: " + message);
        //             setTimeout(startPolling, 100); // retry
        //         })
        //         .catch(err => {
        //             appendLog("⚠️ Error: " + err);
        //             setTimeout(startPolling, 2000); // retry later
        //         });
    }

    connectBtn.addEventListener("click", () => {
        appendLog("📡 Starting long polling for userId: " + userId);
        startPolling();
        connectBtn.disabled = true;
    });
</script>
</body>
</html>